    <!-- Primeiro carregamos o arquivo cardapio.js com nossas funÃ§Ãµes personalizadas -->
    <script src="js/cardapio.js"></script>
    <script>
        // InicializaÃ§Ã£o AOS (Animate On Scroll)
        AOS.init({
            duration: 800,
            easing: 'ease-in-out',
            once: true
        });

        // NavegaÃ§Ã£o do cardÃ¡pio
        $(document).ready(function(){
            // Navbar scroll effect
            $(window).scroll(function() {
                if ($(this).scrollTop() > 50) {
                    $('.navbar').addClass('scrolled');
                } else {
                    $('.navbar').removeClass('scrolled');
                }
            });

            // NavegaÃ§Ã£o de tabs do cardÃ¡pio
            $('.nav-tab').click(function(e){
                e.preventDefault();
                
                // Remove a classe active de todas as tabs
                $('.nav-tab').removeClass('active');
                
                // Adiciona a classe active na tab clicada
                $(this).addClass('active');
                
                // Pega o ID do link
                var targetSection = $(this).attr('href');
                
                // Rola a pÃ¡gina atÃ© a seÃ§Ã£o com animaÃ§Ã£o
                $('html, body').animate({
                    scrollTop: $(targetSection).offset().top - 100
                }, 800);
            });

            // Destaque das seÃ§Ãµes do cardÃ¡pio ao scrollar
            $(window).scroll(function() {
                var scrollPos = $(window).scrollTop();

                $('section.cardapio-section').each(function() {
                    var target = $(this).offset().top - 120;
                    var id = $(this).attr('id');

                    if (scrollPos >= target) {
                        $('.nav-tab').removeClass('active');
                        $('.nav-tab[href="#' + id + '"]').addClass('active');
                    }
                });
            });
        });
    </script>
    
</body>
</html>












